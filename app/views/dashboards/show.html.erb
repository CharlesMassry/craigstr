<h3>Welcome to your dashboard, <%= current_user.email %></h3>

<hr/>

<div>
  <% if current_user.admin? %>
    <%= link_to "New Region", new_region_path %>
    <%= link_to "New Category", new_category_path %>
  <% end %>
</div>

<div>
  <%= link_to "List Regions", regions_path %>
  <%= link_to "List Categories", categories_path %>
</div>

<%= form_for @post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "Submit Post" %>
  </div>
<% end %>
<div>
  <%= render(current_user.posts) %>
</div>
